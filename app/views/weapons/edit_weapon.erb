<h3>EDIT WEAPON</h3>
<br>
<form action="/weapons/<%= @weapon.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  NAME: <input type="text" name="name" placeholder="<%= @weapon.name %>">
  CLASSIFICATION: <input type="text" name="type" placeholder="<%= @weapon.classification %>">
  CALIBER: <input type="text" name="caliber" placeholder="<%= @weapon.caliber %>">
  <input name="submit" value="submit" type="Submit">
</form>
