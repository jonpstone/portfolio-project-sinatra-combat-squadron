<h3>EDIT WEAPON</h3>
<% if flash.has?(:message) %>
  <h2><font color="red"><%= flash[:message] %></font></h2>
<% end %>
<br />
<form action="/weapons/<%= @weapon.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <table>
    <tr>
      <td align='right' style="padding:0 0 15px 0;">NAME:&nbsp&nbsp&nbsp</td>
      <td style="padding:0 0 15px 0;"><input type="text" name="weapon[name]" value="<%= @weapon.name %>"></td>
    </tr>
    <tr>
      <td align='right' style="padding:0 0 15px 0;">TYPE:&nbsp&nbsp&nbsp</td>
      <td style="padding:0 0 15px 0;"><input type="text" name="weapon[classification]" value="<%= @weapon.classification %>"></td>
    </tr>
    <tr>
      <td align='right' style="padding:0 0 15px 0;">CALIBER:&nbsp&nbsp&nbsp</td>
      <td style="padding:0 0 15px 0;"><input type="text" name="weapon[caliber]" value="<%= @weapon.caliber %>"></td>
    </tr>
  </table>
  <input name="submit" value="Submit" type="Submit">
</form>
